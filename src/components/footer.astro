---
import { Icon } from "astro-icon";
import HeroImageMoon from "~/components/hero-image-moon.astro";
import HeroImageHyperSpace from "~/components/hero-image-hyperspace.astro";

const links = [
  {
    url: "https://akera.tech",
    description: "Akera's official website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/orgs/akerallc",
    description: "Akera LLC on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/company/akera-llc",
    description: "Akera LLC on LinkedIn",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://twitter.com/AkeraLLC",
    description: "Akera on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<footer class="relative flex items-center justify-center h-64">
  <div id="footer-bg-fallback" class="absolute inset-0 overflow-hidden opacity-40 hidden">
    <HeroImageMoon />
  </div>
  <div id="footer-bg" class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImageHyperSpace />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {links.map((link) => (
      <li>
        <a
          class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
          href={link.url}
        >
          <span class="sr-only">{link.description}</span>
          <Icon class="h-full" name={link.icon} />
        </a>
      </li>
    ))}
  </ul>
</footer>

<style>
  @media (prefers-reduced-motion: reduce) {
    #footer-bg-fallback {
      @apply block;
    }

    #footer-bg {
      @apply hidden;
    }
  }
</style>